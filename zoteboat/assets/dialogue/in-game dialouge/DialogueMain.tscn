[node name="welcome" parent="dialogue_manager" unique_id=45030735 instance=ExtResource("2_mfygf")]
messages = ["1;Hello, stranger welcome to these strange lands.;1", "1;I would like to explain what is going on but there is sadly not enough time now..;1", "1;Let's continue talking on the other side of this wall!!;1", "1;All the previous strangers told me that they jump by pressing Z on an keyboard and A or cross on controller. And you jump higher by holding it.;1"]

[node name="scary_bug" parent="dialogue_manager" unique_id=1796485007 instance=ExtResource("2_mfygf")]
messages = ["1;Stranger, you see these things they are really scary.;1", "1;Can you please remove them with your fine looking sword that looks like it has a craving of \"Life Ender\" on it.;1", "1;From all the countless sad creatures that came here before you I leared you can attack using Z on keyboard and X or cube on controller.;1"]

[node name="heal" parent="dialogue_manager" unique_id=167649008 instance=ExtResource("2_mfygf")]
messages = ["1;Stranger, you might have took some damage, but you can fix that!;1", "1;If you look top left you might have gotten some \"soul\" after hitting the enemies.;1", "1;The previous strangers told me that if they hold A on keyboard and B or circle on controller that they could heal!.;1", "1;Try to do the stuff that the older strangers never could, and go on your journey!;1"]

[node name="dash_unlock" parent="dialogue_manager" unique_id=1001915472 instance=ExtResource("2_mfygf")]
messages = ["1;You got dash! Press C on keyboard or RT on controller.;1"]

[node name="walljump_unlock" parent="dialogue_manager" unique_id=1107339798 instance=ExtResource("2_mfygf")]
messages = ["1;You got walljump! Go on a wall in the air to cling to it and press the jump button to jump off off the wall.;1"]

[node name="doublejump_unlock" parent="dialogue_manager" unique_id=2053033012 instance=ExtResource("2_mfygf")]
messages = ["1;You got a double jump! Press the jump button in the air to jump again.;1"]

[node name="P_o_B_intro" parent="dialogue_manager" unique_id=1575083784 instance=ExtResource("2_mfygf")]
messages = ["1;To witness secrets sealed, one must endure the harshest punishment.;1", "1;Here one shall regain their strength. Enter and one will feel even more healthy, finish and one shall gain all the health.;1"]

[node name="pogo_explain" parent="dialogue_manager" unique_id=1718127924 instance=ExtResource("2_mfygf")]
messages = ["1;To gain extra height, one can throw their sword down.;1", "1;One can use their attack in all directions. Try to throw ones sword downwards in the air.;1", "1;When one regains their sword they can rethrow their sword to gain even more height.;1"]
